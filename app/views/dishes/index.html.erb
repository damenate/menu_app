<p id="notice"><%= notice %></p>

<h1>Yummy Nom Nom</h1>

<% @courses.each do |course| %>
  <p><%= course.name %></p>
    <% course.dishes.each do |dish|%>
      <%= dish.name %>
      <%= dish.description %>
      <%= dish.price %>
    <% end %>
    <%= link_to 'New_Dish', new_dish_path(course_id: course_id)%>
<% end %>




<table class="whole-thing">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dishes.each do |dish| %>
      <tr>
        <td><%= dish.name %></td>
        <td><%= dish.description %></td>
        <td><%= dish.price %></td>
        <td><%= link_to 'Show', dish %></td>
        <td><%= link_to 'Edit', edit_dish_path(dish) %></td>
        <td><%= link_to 'Destroy', dish, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p class="back-button"><%= link_to 'New Dish', new_dish_path %></p>
